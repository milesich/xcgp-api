{
  "name": "generator",
  "version": "1.0.0",
  "scripts": {
    "clean": "rm -rf ../docs/graphql/schema",
    "graphdoc": "node -r ./node_modules/ts-node/register graphdoc/bin/graphdoc.ts -b graphql/schema/ -p ./plugins/default",
    "generate:main": "npm run clean && npm run graphdoc -- -e https://frontapi.cherrytech.com/graphql -t ./template-main -o ../docs/graphql/schema",
    "generate:menu": "npm run graphdoc -- -e https://frontapi.cherrytech.com/graphql -t ./template-menu -o ./.tmp",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@2fd/graphdoc": "file:graphdoc",
    "@types/node": "^8.10.20",
    "ts-node": "^6.1.2",
    "typescript": "^2.3.4"
  }
}
