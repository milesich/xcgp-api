{
  "name": "generator",
  "version": "1.0.0",
  "scripts": {
    "clean": "rm -rf ../docs/graphql/schema",
    "graphdoc": "node -r ./node_modules/ts-node/register graphdoc/bin/graphdoc.ts",
    "generate:main": "npm run clean && npm run graphdoc -- -e https://frontapi.cherrytech.com/graphql -t ./template-main -p ./plugins/default -o ../docs/graphql/schema && npm run rename",
    "generate:menu": "graphdoc -e https://frontapi.cherrytech.com/graphql -t ./template-menu -p ./plugins/default -o ./.tmp",
    "rename:doc": "find ../docs/graphql/schema -name '*.doc.html' -exec bash -c 'mv \"$1\" \"${1%.doc.html}\".md' - '{}' \\;",
    "rename:spec": "find ../docs/graphql/schema -name '*.spec.html' -exec bash -c 'mv \"$1\" \"${1%.spec.html}\".md' - '{}' \\;",
    "rename": "npm run rename:doc && npm run rename:spec",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@2fd/graphdoc": "file:graphdoc",
    "@types/node": "^8.10.20",
    "ts-node": "^6.1.2",
    "typescript": "^2.3.4"
  }
}
